#password_form.col-md-8.offset-md-2
  .card
    .card-header
      %h2.card-title
        = t '.change_your_password'
    .card-body.pt-0
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, id: 'edit_user_password' }) do |f|
        = f.error_notification
        = f.input :reset_password_token, as: :hidden
        = f.full_error :reset_password_token
        .form-inputs
          = f.input :password,              label: t('.new_password'), required: true, autofocus: true
          = f.input :password_confirmation, label: t('.confirm_new_password'), required: true
        .form-actions
          = f.button :button, class: 'btn btn-primary btn-block btn-lg', id: 'edit_user_password_submit' do
            %i.fa.fa-pencil{ aria: { hidden: :true } }
            = t '.change_my_password'

  .mt-3.text-right
    = link_to new_session_path(resource_name), class: 'text-secondary' do
      %i.fa.fa-sign-in{ aria: { hidden: :true } }
      = t('devise.shared.links.sign_in')

